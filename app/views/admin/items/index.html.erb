<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-4">

<div class="btn "> <%= link_to "新規登録", new_admin_item_path %> </div>

<h1>商品一覧</h1>

  <table>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th></th>
    </tr>
    <% @items.each do |item| %>
    <tr>
      <th><%= attachment_image_tag item, :image, :fill, 100, 100, fallback: "no_image.jpg", size:'60x60',format: 'jpeg' %></th>
      <th>
    <%= link_to item.name, admin_item_path(item.id) %>
　    </th>
　    <th>¥ <%= item.price %></th>
　    </tr>
    <% end %>
  </table>

    </div>
  </div>
</div>