<h1><%= @customer.last_name %>の会員情報編集</h1>

<%= form_with model:@customer, url: admin_customer_path, local:true do |f| %>

<p>会員ID</p>
<p><%= @customer.id %></p>
<p>氏名</p>
<p><%= f.text_field :last_name %> <%= f.text_field :first_name %></p>
<p>フリガナ</p>
<p><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></p>
<p>郵便番号</p>
<p><%= f.text_field :postal_code %></p>
<p>住所</p>
<p><%= f.text_field :address %></p>
<p>メールアドレス</p>
<p><%= f.text_field :email %></p>
<p>会員ステータス</p>


  <%= link_to '有効', admin_customer_path(@customer.id, customer: {is_active: false}), method: :put %>

  <%= link_to '退会', admin_customer_path(@customer.id, customer: {is_active: true}), method: :put %>


<%= f.submit '投稿' %>
  <% end %>
