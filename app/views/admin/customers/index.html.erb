<h1>会員一覧</h1>

<table>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
    <% @customers.each do |customer| %>
    <tr>
      <th><%= customer.id %></th>
      <th>
    <%= link_to customer.last_name, admin_customer_path(customer.id) %>
　    </th>
　    <th><%= customer.email %></th>
　    <th><%= customer.is_active ? '退会' : '有効' %></th>
　    </tr>
    <% end %>
  </table>
