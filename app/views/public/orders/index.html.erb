<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-4">

<h1>注文履歴一覧</h1>


<table>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th></th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <th><%= order.created_at %></th>
　    <th><%= order.postal_code %><%= order.address %><%= order.name %></th>

　    <th><% @order_details = order.order_details %>
　     <% @order_details.each do |order_detail| %>
　      <%= order_detail.item.name%>
　      </br>

　      <% end %>
　    </th>
　    <th><%= order.billing_amount %></th>
　    <th>
　      <%= link_to "表示する", order_path(order.id) %>
　    </th>
　    </tr>
    <% end %>
  </table>



    </div>
  </div>
</div>
