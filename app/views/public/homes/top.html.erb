<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-4">

<h1>ようこそ、ながのCAKEへ！</h1>


<h4>新着商品</h4>
</div>
<% @items.each do |item| %>
    <div class="col-md-3">
      <p>
        <%= link_to item_path(item.id)  do %>
    <%= attachment_image_tag item, :image, :fill, 100, 100, fallback: "no_image.jpg", size:'60x60',format: 'jpeg'%>
    <% end %>
　    </p>
      <p><%= item.name %></p>
　    <p><%= item.price %></p>
    </div>
    <% end %>


  </div>
</div>