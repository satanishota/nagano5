<h1>ショッピングカート</h1>

<p> <%= link_to "買い物をつづける", root_path %></p>
<p><%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %></p>
  <table>
    <tr>
      <th>商品名</th>
      <th>単価</th>
      <th>数量</th>
      <th></th>
      <th>小計</th>
      <th></th>
    </tr>
    <% @cart_items.each do |cart_item| %>
    <tr>
     <th><%= cart_item.item.name %></th>
     <th><%= cart_item.item.price %></th>
　    <th><%= cart_item.amount %></th>
　    <th>
　    <%= form_with model:@cart_item, url: cart_items_path, local:true do |f| %>
　    <%= f.text_field :amount %>
　    <%= f.hidden_field :item_id, :value => cart_item.item.id%>
　    <%= f.submit '変更' %>
      <% end %>
　    </th>

　    <th>
　    <% a = cart_item.amount %>
       <% b = cart_item.item.price.to_i %>
        <%= a*b %>
      </th>
      <th><%= link_to "削除する", cart_items_path, method: :delete %>
      </th>
　    </tr>

    <% end %>

  </table>


