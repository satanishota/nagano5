<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-4">


<h1>配送先登録/一覧</h1>

<%= form_with model:@address, url: addresses_path, local:true do |f| %>

  <p>郵便番号</p>
  <p><%= f.text_field :postal_code %></p>
  <p>住所</p>
  <p><%= f.text_field :address %></p>
  <p>宛名</p>
  <p><%= f.text_field :name %></p>

  <%= f.submit '新規登録' %>
  <% end %>

<table>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
    <% @addresses.each do |address| %>
    <tr>
      <th><%= address.postal_code %></th>
      <th><%= address.address%></th>
　    <th><%= address.name %></th>

　    <th>
    <%= link_to "編集する", edit_address_path(address.id) %>
    <%= link_to "削除する", address_path(address.id), method: :delete %>
　    </th>
　    </tr>

    <% end %>
  </table>

 </div>
  </div>
</div>
